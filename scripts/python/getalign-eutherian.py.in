# Function used to retrive file from urls
def geturl(url,md5sum):
  file_name = url.split('/')[-1]
  u = urllib2.urlopen(url)
  f = open(file_name, 'wb')
  meta = u.info()
  file_size = int(meta.getheaders("Content-Length")[0])
  print "Downloading: {} Bytes: {}".format(file_name, file_size)

  file_size_dl = 0
  block_sz = 8192

  h = hashlib.md5()

  while True:
    buffer = u.read(block_sz)
    if not buffer:
      break

    h.update(buffer)

    file_size_dl += len(buffer)
    f.write(buffer)
    status = "{:>15}  [{:.2%}]   \r".format(file_size_dl, float(file_size_dl) / file_size)
    print status,

  f.close()
  if h.hexdigest()!=md5sum:
    print "The md5 sum of file ",file_name," is not correct! Aborting."
    sys.exit(1)

def checkexist(filename, md5sum):
  try:
    open(filename)
    h=hashlib.md5()
    with open(filename) as file:
      chunk=" "
      while chunk:
        chunk=file.read(32768)
        h.update(chunk)
    if h.hexdigest()==md5sum:
      print "File %s is already present." % \
          (filename)
      return True
    else:
      print "File %s is present but seems to be corrupted. Re-downloading it." % \
          (filename)
      return False
  except IOError as e:
    return False

def mkdir(path):
   try:
      os.mkdir(path)
   except os.error, e:
      if e.errno != errno.EEXIST:
         raise

def gunzip(filename):
  with gzip.open(filename, 'rb') as gzipf:
    with open(f.rstrip('.gz'), 'w') as fout:
      fout.write(gzipf.read())
  os.remove(f)

