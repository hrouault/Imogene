         for i in range(posstart,posstop):
            record=repeat[i]
            if record[0]==coordstart[0]:
               maskseq(record[1]-coordstart[1],record[2]-coordstart[1],seqline,1)
         fmavid2.write(''.join(seqline))
         for i in fmavid.readlines():
            fmavid2.write(i)
   shutil.move("mavid2.mfa","mavid.mfa")
   os.chdir("..")
