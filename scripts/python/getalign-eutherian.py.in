               for line in fmavid.readlines():
                  if line[0]=='>':
                     fmavid2.write("\n"+line)
                  else:
                     fmavid2.write(line.rstrip())
         shutil.move("mavid2.mfa","mavid.mfa")
         os.chdir("..")
      else:
         shutil.rmtree(i[0])
   else:
      shutil.rmtree(i[0])



for folder in glob.glob('[0-9]*/'):
