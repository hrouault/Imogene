for file in glob.glob('*.emf'):
   with open(file) as femf:
      while 1:
         line=femf.readline()
         while line[0:3] != 'SEQ':
            line=femf.readline()
         col=0
         cols=[-1 for i in range(12)]
         seqs=["" for i in range(12)]
         chrs=["" for i in range(12)]
         while line[0:3] == 'SEQ':
            coords=line.rstrip().split(" ")
            if coords[1] != "ancestral_sequences":
               cols[spe2num(coords[1])]=col
               chrs[spe2num(coords[1])]=coords[2]
            col+=1
            line=femf.readline()
         
         if cols[spe2num("mus_musculus")]==-1 or chrs[spe2num("mus_musculus")]=="":
            continue
         
         femf.readline()
         line=femf.readline()
         counter=0
         while line[0:2] != '//':
            for i in range(12):
               if cols[i] != -1:
                  seqs[i]+=line[cols[i]]
            counter+=1
            if counter==50000:
               break
            line=femf.readline()
         print seqs
         sys.exit()
         if not line: break
         print cols
         sys.exit(1)


   
