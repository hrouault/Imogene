from weblogolib import *
from numpy import array,transpose
import sys

motname=sys.argv[1]
f=[]
for freqline in sys.argv[2:]: 
   freqs=freqline.split(',')
   for i in range(len(freqs)):
      freqs[i]=float(freqs[i])
   f.append(freqs)
f=array(f)
data=LogoData.from_counts(alphabet='ATCG',counts=f,prior=None)
print data
options = LogoOptions()
#options.logo_title = motname
#options.title_fontsize = 8
options.fineprint = ""
options.color_scheme = std_color_schemes["classic"]
options.logo_font    = "Arial-BoldMT"
format = LogoFormat(data,options)
fout = open(motname+'.pdf', 'w')
pdf_formatter(data,format,fout)
