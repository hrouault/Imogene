class MyFileObj(file):
    def read(self, size):
        curpos = self.tell()
        status = ('{0:>15}  [{1:.2%}]                          \r'
                  .format(curpos, float(curpos) / tartotalsize))
        print status,
        sys.stdout.flush()
        return file.read(self, size)


